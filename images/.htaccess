# ✅ السماح بالوصول لجميع أنواع الصور
<FilesMatch "\.(jpg|jpeg|png|gif|webp|svg|ico|avif)$">
    <IfModule mod_authz_core.c>
        Require all granted
    </IfModule>
    <IfModule !mod_authz_core.c>
        Order Allow,Deny
        Allow from all
    </IfModule>
</FilesMatch>

# ✅ السماح بالوصول لملفات أخرى قد تكون موجودة (مثل .txt, .json)
<FilesMatch "\.(txt|json|log)$">
    <IfModule mod_authz_core.c>
        Require all granted
    </IfModule>
    <IfModule !mod_authz_core.c>
        Order Allow,Deny
        Allow from all
    </IfModule>
</FilesMatch>

# منع عرض محتويات المجلد
Options -Indexes

# إضافة headers للأمان
<IfModule mod_headers.c>
    Header always set X-Content-Type-Options nosniff
    Header always set X-Frame-Options SAMEORIGIN
    Header always set X-XSS-Protection "1; mode=block"
</IfModule>
